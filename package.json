{
  "name": "vite-ts-react",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "prepare": "is-ci || husky install",
    "start": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview --port 3000",
    "lint": "eslint {cypress,src}",
    "lint:fix": "npm run lint -- --fix",
    "prettier": "prettier {cypress,src} --check",
    "prettier:fix": "npm run prettier -- --write",
    "format": "npm run prettier:fix && npm run lint:fix",
    "cypress": "run-p start cypress:open",
    "cypress:ct": "cypress open --component --browser electron",
    "cypress:ci": "npm run build && run-p -r preview cypress:run",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run"
  },
  "dependencies": {
    "prop-types": "^15.8.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "styled-components": "^5.3.5"
  },
  "devDependencies": {
    "@types/react": "^18.0.15",
    "@types/react-dom": "^18.0.6",
    "@types/styled-components": "^5.1.25",
    "@typescript-eslint/eslint-plugin": "^5.30.5",
    "@typescript-eslint/parser": "^5.30.5",
    "@vitejs/plugin-react": "^1.3.0",
    "autoprefixer": "^10.4.7",
    "cypress": "^10.1.0",
    "eslint": "^8.18.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.30.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.0",
    "is-ci": "^3.0.1",
    "lint-staged": "^13.0.2",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.14",
    "prettier": "^2.7.1",
    "prettier-plugin-tailwindcss": "^0.1.12",
    "tailwindcss": "^3.1.5",
    "twin.macro": "^2.8.2",
    "typescript": "^4.7.4",
    "vite": "^2.9.13",
    "vite-plugin-babel-macros": "^1.0.6",
    "vite-plugin-env-compatible": "^1.1.1",
    "vite-plugin-svgr": "^2.2.0",
    "vite-plugin-windicss": "^1.8.6",
    "vite-tsconfig-paths": "^3.5.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "eslint --fix",
    "*.{html,css,scss,json,md}": "prettier --write"
  },
  "babelMacros": {
    "twin": {
      "preset": "styled-components"
    }
  }
}
